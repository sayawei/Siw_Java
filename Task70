public class Task70 {
    public static void main (String[] args) {
        int number = -9;

        if (number > 0) {
            System.out.println("The number is positive.");
        } else if (number < 0) {
            System.out.println("The number is negative.");
        } else {
            System.out.println("The number is zero.");
        }
    }
}

//Output: The number is negative.
